<h2>Login</h2>

<form action="/auth/login" method="POST" id="form-container">
  <div class="form-group">
    <label for="username">Email</label>
    <input id="username" class="form-control" type="email" name="username" placeholder="Your email">
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    <input id="password" class="form-control" type="password" name="password" placeholder="Your password">
  </div>

  {{#if message }}
    <div class="alert alert-danger">{{ message }}</div>
  {{/if}}

  <button class="btn btn-primary">Login</button>

  <p class="alert alert-light">
    Don't have an account yet?
    <a href="/auth/login">Signup</a>
  </p>
</form>
