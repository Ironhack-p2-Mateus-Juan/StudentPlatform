<!-- views/auth/signup.hbs -->
<h2>Signup</h2>

<form action="/auth/signup" method="POST" id="form-container">
  <div class="form-group">
    <label for="email">Email</label>
    <input id="email" class="form-control" type="email" name="email" placeholder="Your email">
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    <input id="password" class="form-control" type="password" name="password" placeholder="Your password">
  </div>

  {{#if message }}
    <div class="alert alert-danger">{{ message }}</div>
  {{/if}}

  <button class="btn btn-primary">Create account</button>

  <p class="alert alert-light">
    Do you already have an account?
    <a href="/auth/login">Login</a>
  </p>
</form>
