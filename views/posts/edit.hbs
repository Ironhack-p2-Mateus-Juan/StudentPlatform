<h1>All posts by user {{user.email}} </h1>

<div class="container d-flex flex-column">

<div class="card-group">
    {{#each all.publications}}
    <div class="card col p-2 m-2">
        {{!--
        <img class="card-img-top" src="..." alt="Card image cap"> --}}
        <div class="card-body p-2">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text mb-3">{{thumb}}</p>
            <p class="card-text m-0">
                <small class="text-muted">Created {{created_at}}</small>
            </p>
            <p class="card-text">
                <small class="text-muted">Last updated {{updated_at}} | Type: {{type}}</small>
            </p>
        </div>
        <div class="row">
            <div class="col-md-12 text-right">
                <a href="/post/edit/{{this.id}}" class="btn btn-warning pr-4 pl-4 pt-2 pb-2 m-2" data-toggle="tooltip" title="Edit this post">
                    <i class="far fa-edit mr-2"></i>Edit
                </a>
                <a href="/post/delete/{{this.id}}" class="btn btn-danger pr-4 pl-4 pt-2 pb-2 m-2" data-toggle="tooltip" title="Delete this post">
                    <i class="fas fa-trash-alt mr-2"></i>Delete
                </a>
            </div>
        </div>
    </div>
    {{/each}}
</div>
</div>