<div class="container-fluid p-0 post-section">
  <div class="container p-0 mt-4 d-flex justify-content-between align-items-baseline section-title">

    <h1>Trending projects</h1>
    <a href="#">See more</a>
  </div>
  <div class="container-fluid d-flex justify-content-center card-group p-0">
    <div class="container d-flex row justify-content-between mt-3 p-0">
      {{#each publication}}
      <div class="card p-0 mb-2">

        <a href="/post/{{id}}">
          <div class="card-top d-flex justify-content-center align-items-center p-0 m-0 {{#unless imagePath}}bg-no-img{{/unless}}">
            {{#if imagePath}}
            <img class="card-top-img" src="{{imagePath}}" alt="{{title}}"> {{/if}}
          </div>
        </a>  

        <div class="d-flex justify-content-start p-0 pl-2">
          <div class="card-author mr-2">
            <img src="{{#if author.imgPath }}{{author.imgPath}}{{else}}{{avatar}}{{/if}}" alt="{{author.username}}">
          </div>
          <h5 class="card-title p-0 m-0 ml-5">{{title}}</h5>
        </div>

        <div class="card-body p-3 d-flex flex-column justify-content-between">
          <p class="card-text" id="card-thumb">{{thumb}}</p>
          <p class="card-text">
            <small class="text-muted">Writen by: {{#if author.username}}{{author.username}}{{else}}{{author.email}}{{/if}}
            </small>
          </p>
          <div class="container-fluid d-flex justify-content-between p-0 text-right">
            <div class="w-50 d-flex align-items-center">
              <a href="" class="icon-favorite-unselected mr-2"></a>
              <a href="" class="icon-clap"></a>
              <p class="m-0 ml-1" id="project-clap-counter">1</p>
            </div>
            <a href="/post/{{id}}" class="btn btn-dark read-more">Read more</a>
          </div>
        </div>

      </div>
      {{/each}}
    </div>
  </div>
</div>