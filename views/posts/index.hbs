<div class="container-fluid d-flex justify-content-center card-group">

  <div class="container d-flex row justify-content-center mt-3 p-0">
    {{#each publication}}
    <div class="card p-2 mb-2">

      <div class="card-top">
        <img class="card-top-img" src="{{imagePath}}" alt="{{title}}">
      </div>

      {{#if author.imgPath }}
        <div class="card-author">
          <img src="{{author.imgPath}}" alt="{{author.username}}">
        </div>
      {{/if}}

    <div class="card-body d-flex flex-column justify-content-between">
      <h5 class="card-title">{{title}}</h5>
      <p class="card-text">{{thumb}}</p>
      <div id="post-vcard">

        <p class="card-text m-0">
          <small class="text-muted">Created: {{created_at}}</small>
        </p>
        <p class="card-text">
          <small class="text-muted">Last updated: {{updated_at}}
            <br>Type: {{type}}</small>
        </p>
      </div>
      <p class="card-text">
        {{!-- Change "email" for "username" --}}
        <small class="text-muted">Writen by:
          {{#if author.username}}{{author.username}}{{else}}{{author.email}}{{/if}}
        </small>
      </p>
      <div class="container-fluid text-right">
        <a href="/post/{{id}}" class="btn btn-dark read-more">Read more</a>
      </div>
    </div>
  </div>
  {{/each}}
</div>
</div>