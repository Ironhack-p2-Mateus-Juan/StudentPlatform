<div class="container-fluid d-flex justify-content-center card-group">

  <div class="container d-flex row justify-content-center mt-3 p-0">
    {{#each events}}
    <div class="card p-2 mb-2">

      <img class="card-img-top" src="{{imagePath}}" alt="Card image cap">
      <div class="card-body d-flex flex-column justify-content-between">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text">{{thumb}}</p>
        <div id="post-vcard">

          <p class="card-text m-0">
            <small class="text-muted">Created: {{created_at}}</small>
          </p>
          <p class="card-text">
            <small class="text-muted">Last updated: {{updated_at}}
              <br>Type: {{type}}</small>
          </p>
        </div>
        <p class="card-text">
          <small class="text-muted">Writen by: {{#if author.username}}{{author.username}}{{else}}{{author.email}}{{/if}}
          </small>
        </p>
        <div class="container-fluid text-right">
          <a href="/event/{{id}}" class="btn btn-dark btn-sm col-sm-4 read-more">Read more</a>

        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>